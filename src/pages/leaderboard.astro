---
import Layout from '../layouts/Layout.astro';
import matchState from '../data/match-state.json';
---

<Layout title="Leaderboard">
  <div class="space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl sm:text-5xl font-black mb-2">
        <span class="gold-chrome-text">LEADERBOARD</span>
        <span class="neon-cyan">& AWARDS</span>
      </h1>
      <p class="text-purple-300 max-w-lg mx-auto">
        Track who's winning the watch party competition
      </p>
    </div>

    <!-- Main Leaderboard -->
    <section class="vaporwave-card p-6">
      <h2 class="text-xl font-bold mb-4">
        <span class="gold-chrome-text">OVERALL</span>
        <span class="text-white">STANDINGS</span>
      </h2>

      <div class="space-y-3" id="leaderboard-list">
        {matchState.users.map((user, index) => (
          <div class={`flex items-center gap-4 p-4 rounded-lg transition-all ${
            index === 0 ? 'bg-gradient-to-r from-yellow-900/40 to-transparent border border-yellow-600/50 shadow-lg shadow-yellow-500/10' :
            index === 1 ? 'bg-gradient-to-r from-gray-700/40 to-transparent border border-gray-500/30' :
            index === 2 ? 'bg-gradient-to-r from-amber-900/30 to-transparent border border-amber-700/30' :
            'bg-gray-800/50 border border-purple-800/20'
          }`}>
            <div class={`w-10 h-10 rounded-full flex items-center justify-center font-bold shadow-lg ${
              index === 0 ? 'bg-gradient-to-br from-yellow-400 to-yellow-600 text-black shadow-yellow-500/30' :
              index === 1 ? 'bg-gradient-to-br from-gray-300 to-gray-500 text-black shadow-gray-400/30' :
              index === 2 ? 'bg-gradient-to-br from-amber-500 to-amber-700 text-white shadow-amber-500/30' :
              'bg-gray-700 text-gray-400'
            }`}>
              {index + 1}
            </div>
            <div class="flex-1">
              <div class="text-white font-bold">{user.name}</div>
              <div class="text-purple-400 text-xs">No stats yet</div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-black neon-cyan">0</div>
              <div class="text-purple-400 text-xs">points</div>
            </div>
          </div>
        ))}
      </div>

      <p class="text-purple-400 text-sm text-center mt-4">
        Points will be calculated as the matches progress
      </p>
    </section>

    <!-- Awards Section -->
    <section class="vaporwave-card p-6">
      <h2 class="text-xl font-bold mb-4">
        <span class="gold-chrome-text">PARTY</span>
        <span class="text-white">AWARDS</span>
      </h2>
      <p class="text-purple-300 text-sm mb-4">Special recognition at the end of the event</p>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="p-4 bg-gradient-to-br from-yellow-900/30 to-transparent rounded-lg text-center border border-yellow-800/30 hover:border-yellow-500/50 transition-all group">
          <div class="text-3xl mb-2 group-hover:animate-bounce">üèÜ</div>
          <div class="text-white font-bold group-hover:text-yellow-400 transition-colors">Royal Champion</div>
          <div class="text-purple-300 text-xs mb-2">Lottery winner of either Rumble</div>
          <div class="gold-chrome-text font-bold">-</div>
        </div>
        <div class="p-4 bg-gradient-to-br from-cyan-900/30 to-transparent rounded-lg text-center border border-cyan-800/30 hover:border-cyan-500/50 transition-all group">
          <div class="text-3xl mb-2 group-hover:animate-bounce">‚è±Ô∏è</div>
          <div class="text-white font-bold group-hover:text-cyan-400 transition-colors">Iron Person</div>
          <div class="text-purple-300 text-xs mb-2">Most combined ring time</div>
          <div class="neon-cyan font-bold">-</div>
        </div>
        <div class="p-4 bg-gradient-to-br from-red-900/30 to-transparent rounded-lg text-center border border-red-800/30 hover:border-red-500/50 transition-all group">
          <div class="text-3xl mb-2 group-hover:animate-bounce">üí™</div>
          <div class="text-white font-bold group-hover:text-red-400 transition-colors">The Eliminator</div>
          <div class="text-purple-300 text-xs mb-2">Most eliminations</div>
          <div class="text-red-400 font-bold">-</div>
        </div>
        <div class="p-4 bg-gradient-to-br from-purple-900/30 to-transparent rounded-lg text-center border border-purple-800/30 hover:border-purple-500/50 transition-all group">
          <div class="text-3xl mb-2 group-hover:animate-bounce">üîÆ</div>
          <div class="text-white font-bold group-hover:text-purple-400 transition-colors">Fortune Teller</div>
          <div class="text-purple-300 text-xs mb-2">Most correct predictions</div>
          <div class="neon-pink font-bold" style="text-shadow: 0 0 10px #ff00ff;">-</div>
        </div>
      </div>
    </section>

    <!-- Stats Breakdown -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Men's Rumble Stats -->
      <section class="vaporwave-card p-6">
        <h3 class="text-lg font-bold blue-chrome-text mb-4">Men's Rumble Stats</h3>

        <div class="space-y-2">
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-cyan-400">Match Status</span>
            <span class="text-white font-medium">Not Started</span>
          </div>
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-cyan-400">Entrants</span>
            <span class="text-white font-medium">0 / 30</span>
          </div>
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-cyan-400">Eliminations</span>
            <span class="text-white font-medium">0</span>
          </div>
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-cyan-400">Winner</span>
            <span class="text-white font-medium">-</span>
          </div>
        </div>

        <div class="mt-4 pt-4 border-t border-cyan-800/30">
          <h4 class="text-white font-bold mb-2">Top Performers</h4>
          <div class="text-purple-400 text-sm">Match not started</div>
        </div>
      </section>

      <!-- Women's Rumble Stats -->
      <section class="vaporwave-card p-6">
        <h3 class="text-lg font-bold neon-pink mb-4" style="text-shadow: 0 0 10px #ff00ff;">Women's Rumble Stats</h3>

        <div class="space-y-2">
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-pink-400">Match Status</span>
            <span class="text-white font-medium">Not Started</span>
          </div>
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-pink-400">Entrants</span>
            <span class="text-white font-medium">0 / 30</span>
          </div>
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-pink-400">Eliminations</span>
            <span class="text-white font-medium">0</span>
          </div>
          <div class="flex justify-between text-sm p-2 bg-gray-800/30 rounded">
            <span class="text-pink-400">Winner</span>
            <span class="text-white font-medium">-</span>
          </div>
        </div>

        <div class="mt-4 pt-4 border-t border-pink-800/30">
          <h4 class="text-white font-bold mb-2">Top Performers</h4>
          <div class="text-purple-400 text-sm">Match not started</div>
        </div>
      </section>
    </div>

    <!-- Point System Explanation -->
    <section class="vaporwave-card p-6">
      <h2 class="text-xl font-bold mb-4">
        <span class="gold-chrome-text">POINT</span>
        <span class="text-white">SYSTEM</span>
      </h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
        <div class="p-4 bg-gradient-to-br from-yellow-900/30 to-transparent rounded-lg border border-yellow-800/30">
          <div class="gold-chrome-text font-black text-2xl mb-1">+50</div>
          <div class="text-white font-bold">Lottery Winner</div>
          <div class="text-purple-300 text-xs">Your wrestler wins the Rumble</div>
        </div>
        <div class="p-4 bg-gradient-to-br from-purple-900/30 to-transparent rounded-lg border border-purple-800/30">
          <div class="neon-pink font-black text-2xl mb-1" style="text-shadow: 0 0 10px #ff00ff;">+20</div>
          <div class="text-white font-bold">Final Four</div>
          <div class="text-purple-300 text-xs">Your wrestler makes final 4</div>
        </div>
        <div class="p-4 bg-gradient-to-br from-red-900/30 to-transparent rounded-lg border border-red-800/30">
          <div class="text-red-400 font-black text-2xl mb-1">+5</div>
          <div class="text-white font-bold">Each Elimination</div>
          <div class="text-purple-300 text-xs">By your wrestlers</div>
        </div>
        <div class="p-4 bg-gradient-to-br from-cyan-900/30 to-transparent rounded-lg border border-cyan-800/30">
          <div class="neon-cyan font-black text-2xl mb-1">+1</div>
          <div class="text-white font-bold">Per Minute</div>
          <div class="text-purple-300 text-xs">Your wrestlers in the ring</div>
        </div>
      </div>

      <div class="mt-4 p-3 bg-gradient-to-r from-yellow-900/30 to-orange-900/20 border border-yellow-600/50 rounded-lg">
        <div class="text-yellow-400 text-sm">
          <strong class="text-yellow-300">Bonus Points:</strong> Correct predictions earn <span class="font-bold">+10</span> points each
        </div>
      </div>
    </section>
  </div>
</Layout>

