---
import Layout from '../layouts/Layout.astro';
import matchState from '../data/match-state.json';
---

<Layout title="Leaderboard">
  <div class="space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-white mb-2">
        Leaderboard <span class="text-purple-400">& Awards</span>
      </h1>
      <p class="text-gray-400 max-w-lg mx-auto">
        Track who's winning the watch party competition
      </p>
    </div>

    <!-- Main Leaderboard -->
    <section class="bg-gray-900 rounded-xl p-6 border border-gray-800">
      <h2 class="text-xl font-semibold text-white mb-4">Overall Standings</h2>

      <div class="space-y-3" id="leaderboard-list">
        {matchState.users.map((user, index) => (
          <div class={`flex items-center gap-4 p-4 rounded-lg ${index === 0 ? 'bg-yellow-900/20 border border-yellow-600' : 'bg-gray-800'}`}>
            <div class={`w-10 h-10 rounded-full flex items-center justify-center font-bold ${
              index === 0 ? 'bg-yellow-500 text-black' :
              index === 1 ? 'bg-gray-400 text-black' :
              index === 2 ? 'bg-amber-600 text-white' :
              'bg-gray-700 text-gray-400'
            }`}>
              {index + 1}
            </div>
            <div class="flex-1">
              <div class="text-white font-medium">{user.name}</div>
              <div class="text-gray-400 text-xs">No stats yet</div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-purple-400">0</div>
              <div class="text-gray-500 text-xs">points</div>
            </div>
          </div>
        ))}
      </div>

      <p class="text-gray-500 text-sm text-center mt-4">
        Points will be calculated as the matches progress
      </p>
    </section>

    <!-- Awards Section -->
    <section class="bg-gray-900 rounded-xl p-6 border border-gray-800">
      <h2 class="text-xl font-semibold text-white mb-4">Party Awards</h2>
      <p class="text-gray-400 text-sm mb-4">Special recognition at the end of the event</p>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="p-4 bg-gray-800 rounded-lg text-center">
          <div class="text-3xl mb-2">üèÜ</div>
          <div class="text-white font-medium">Royal Champion</div>
          <div class="text-gray-500 text-xs mb-2">Lottery winner of either Rumble</div>
          <div class="text-purple-400 font-bold">-</div>
        </div>
        <div class="p-4 bg-gray-800 rounded-lg text-center">
          <div class="text-3xl mb-2">‚è±Ô∏è</div>
          <div class="text-white font-medium">Iron Person</div>
          <div class="text-gray-500 text-xs mb-2">Most combined ring time</div>
          <div class="text-purple-400 font-bold">-</div>
        </div>
        <div class="p-4 bg-gray-800 rounded-lg text-center">
          <div class="text-3xl mb-2">üí™</div>
          <div class="text-white font-medium">The Eliminator</div>
          <div class="text-gray-500 text-xs mb-2">Most eliminations</div>
          <div class="text-purple-400 font-bold">-</div>
        </div>
        <div class="p-4 bg-gray-800 rounded-lg text-center">
          <div class="text-3xl mb-2">üîÆ</div>
          <div class="text-white font-medium">Fortune Teller</div>
          <div class="text-gray-500 text-xs mb-2">Most correct predictions</div>
          <div class="text-purple-400 font-bold">-</div>
        </div>
      </div>
    </section>

    <!-- Stats Breakdown -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Men's Rumble Stats -->
      <section class="bg-gray-900 rounded-xl p-6 border border-gray-800">
        <h3 class="text-lg font-semibold text-blue-400 mb-4">Men's Rumble Stats</h3>

        <div class="space-y-2">
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Match Status</span>
            <span class="text-white">Not Started</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Entrants</span>
            <span class="text-white">0 / 30</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Eliminations</span>
            <span class="text-white">0</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Winner</span>
            <span class="text-white">-</span>
          </div>
        </div>

        <div class="mt-4 pt-4 border-t border-gray-700">
          <h4 class="text-white font-medium mb-2">Top Performers</h4>
          <div class="text-gray-500 text-sm">Match not started</div>
        </div>
      </section>

      <!-- Women's Rumble Stats -->
      <section class="bg-gray-900 rounded-xl p-6 border border-gray-800">
        <h3 class="text-lg font-semibold text-pink-400 mb-4">Women's Rumble Stats</h3>

        <div class="space-y-2">
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Match Status</span>
            <span class="text-white">Not Started</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Entrants</span>
            <span class="text-white">0 / 30</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Eliminations</span>
            <span class="text-white">0</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Winner</span>
            <span class="text-white">-</span>
          </div>
        </div>

        <div class="mt-4 pt-4 border-t border-gray-700">
          <h4 class="text-white font-medium mb-2">Top Performers</h4>
          <div class="text-gray-500 text-sm">Match not started</div>
        </div>
      </section>
    </div>

    <!-- Point System Explanation -->
    <section class="bg-gray-900 rounded-xl p-6 border border-gray-800">
      <h2 class="text-xl font-semibold text-white mb-4">Point System</h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
        <div class="p-3 bg-gray-800 rounded-lg">
          <div class="text-purple-400 font-bold text-lg mb-1">+50</div>
          <div class="text-white">Lottery Winner</div>
          <div class="text-gray-500 text-xs">Your wrestler wins the Rumble</div>
        </div>
        <div class="p-3 bg-gray-800 rounded-lg">
          <div class="text-purple-400 font-bold text-lg mb-1">+20</div>
          <div class="text-white">Final Four</div>
          <div class="text-gray-500 text-xs">Your wrestler makes final 4</div>
        </div>
        <div class="p-3 bg-gray-800 rounded-lg">
          <div class="text-purple-400 font-bold text-lg mb-1">+5</div>
          <div class="text-white">Each Elimination</div>
          <div class="text-gray-500 text-xs">By your wrestlers</div>
        </div>
        <div class="p-3 bg-gray-800 rounded-lg">
          <div class="text-purple-400 font-bold text-lg mb-1">+1</div>
          <div class="text-white">Per Minute</div>
          <div class="text-gray-500 text-xs">Your wrestlers in the ring</div>
        </div>
      </div>

      <div class="mt-4 p-3 bg-yellow-900/20 border border-yellow-600 rounded-lg">
        <div class="text-yellow-400 text-sm">
          <strong>Bonus Points:</strong> Correct predictions earn +10 points each
        </div>
      </div>
    </section>
  </div>
</Layout>

