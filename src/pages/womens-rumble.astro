---
import Layout from '../layouts/Layout.astro';
import EntrantList from '../components/EntrantList';
import RingStatus from '../components/RingStatus';
import AdminPanel from '../components/AdminPanel';
---

<Layout title="Women's Royal Rumble">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-2xl sm:text-4xl font-black page-title">
          <span class="rumble-title">WOMEN'S</span>
          <span class="pink-chrome-text">ROYAL RUMBLE</span>
        </h1>
        <p class="text-purple-300 mt-1">30 Superstars compete for a WrestleMania title shot</p>
      </div>

      <!-- Admin Toggle -->
      <button
        id="admin-toggle"
        class="hidden px-4 py-2 bg-purple-900/50 hover:bg-purple-800/50 rounded-lg text-purple-300 text-sm font-medium transition-colors border border-purple-700/50"
      >
        Show Admin Panel
      </button>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-3 gap-6">
      <!-- Left Column: Entrant List -->
      <div class="lg:col-span-2">
        <div class="vaporwave-card p-4">
          <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
            <span class="w-3 h-3 bg-pink-400 rounded-full animate-pulse shadow-lg shadow-pink-500/50" />
            <span class="pink-chrome-text">ENTRANTS</span>
          </h2>
          <div id="entrant-list">
            <EntrantList client:load rumbleType="womens" />
          </div>
        </div>
      </div>

      <!-- Right Column: Ring Status + Admin -->
      <div class="space-y-6">
        <!-- Ring Status -->
        <div id="ring-status">
          <RingStatus client:load rumbleType="womens" />
        </div>

        <!-- Admin Panel (hidden by default) -->
        <div id="admin-panel" class="hidden">
          <AdminPanel client:load rumbleType="womens" />
        </div>

        <!-- User's Numbers -->
        <div class="vaporwave-card p-4">
          <h3 class="font-bold mb-3">
            <span class="gold-chrome-text">YOUR</span>
            <span class="text-white">NUMBERS</span>
          </h3>
          <div id="user-numbers" class="text-purple-300 text-sm">
            Select your name on the home page to see your numbers.
          </div>
        </div>

        <!-- Lucky Numbers Info -->
        <div class="vaporwave-card p-4">
          <h3 class="font-bold mb-3">
            <span class="gold-chrome-text">LUCKY</span>
            <span class="text-white">NUMBERS</span>
          </h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-pink-400 font-bold">#28</span>
              <span class="text-white">2 wins</span>
            </div>
            <div class="flex justify-between">
              <span class="text-pink-400 font-bold">#3</span>
              <span class="text-white">2 wins</span>
            </div>
            <div class="flex justify-between">
              <span class="text-pink-400 font-bold">#1</span>
              <span class="text-white">1 win (Rhea)</span>
            </div>
            <div class="flex justify-between">
              <span class="text-pink-400 font-bold">#27</span>
              <span class="text-white">1 win (Charlotte)</span>
            </div>
          </div>
          <a href="/reference" class="block mt-3 text-xs text-pink-400 hover:text-pink-300 transition-colors">
            View all stats &rarr;
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initCurrentUser, $currentUser, getUserLotteryNumbers } from '../stores/matchStore';

  // Initialize current user from localStorage
  initCurrentUser();

  // Check for admin mode (simple URL param for now)
  const urlParams = new URLSearchParams(window.location.search);
  const isAdmin = urlParams.get('admin') === 'true';

  if (isAdmin) {
    const adminToggle = document.getElementById('admin-toggle');
    const adminPanel = document.getElementById('admin-panel');

    if (adminToggle && adminPanel) {
      adminToggle.classList.remove('hidden');

      adminToggle.addEventListener('click', () => {
        const isHidden = adminPanel.classList.contains('hidden');
        adminPanel.classList.toggle('hidden');
        adminToggle.textContent = isHidden ? 'Hide Admin Panel' : 'Show Admin Panel';
      });
    }
  }

  // Update user numbers display
  function updateUserNumbers() {
    const userNumbers = document.getElementById('user-numbers');
    if (!userNumbers) return;

    const currentUser = $currentUser.get();
    if (!currentUser) {
      userNumbers.innerHTML = `
        <p>Select your name on the <a href="/" class="text-pink-400 hover:underline">home page</a> to see your numbers.</p>
      `;
      return;
    }

    const numbers = getUserLotteryNumbers(currentUser.id, 'womens');
    if (numbers.length === 0) {
      userNumbers.innerHTML = `
        <p class="text-gray-400">No numbers assigned yet.</p>
        <a href="/lottery" class="text-pink-400 hover:underline text-xs">Go to lottery draw</a>
      `;
    } else {
      userNumbers.innerHTML = `
        <div class="flex gap-2">
          ${numbers.map(num => `
            <span class="w-10 h-10 rounded-full bg-pink-600 flex items-center justify-center text-white font-bold">
              ${num}
            </span>
          `).join('')}
        </div>
      `;
    }
  }

  // Subscribe to user changes
  $currentUser.subscribe(updateUserNumbers);
  updateUserNumbers();
</script>
