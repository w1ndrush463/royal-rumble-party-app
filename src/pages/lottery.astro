---
import Layout from '../layouts/Layout.astro';
import LotteryDraw from '../components/LotteryDraw';
---

<Layout title="Lottery Draw">
  <div class="space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl sm:text-5xl font-black mb-2 page-title">
        <span class="gold-chrome-text">LOTTERY</span>
        <span class="neon-cyan">DRAW</span>
      </h1>
      <p class="text-purple-300 max-w-lg mx-auto">
        Each player draws 2 random numbers for the Royal Rumble. If your wrestler wins, you win!
      </p>
    </div>

    <!-- Current User -->
    <div id="current-user-display" class="text-center text-purple-300">
      Loading...
    </div>

    <!-- Tab Navigation -->
    <div class="flex justify-center">
      <div class="inline-flex bg-gray-800/50 rounded-lg p-1 border border-purple-800/30">
        <button
          id="tab-mens"
          class="px-6 py-2 rounded-md text-sm font-bold transition-all bg-gradient-to-r from-blue-600 to-cyan-600 text-white shadow-lg shadow-cyan-500/20"
        >
          Men's Rumble
        </button>
        <button
          id="tab-womens"
          class="px-6 py-2 rounded-md text-sm font-bold transition-all text-purple-300 hover:text-white"
        >
          Women's Rumble
        </button>
      </div>
    </div>

    <!-- Men's Lottery -->
    <div id="mens-lottery" class="block">
      <LotteryDraw client:load rumbleType="mens" />
    </div>

    <!-- Women's Lottery -->
    <div id="womens-lottery" class="hidden">
      <LotteryDraw client:load rumbleType="womens" />
    </div>

    <!-- Info Section -->
    <div class="max-w-2xl mx-auto mt-8">
      <div class="vaporwave-card p-6">
        <h3 class="font-bold mb-3">
          <span class="gold-chrome-text">HOW IT</span>
          <span class="text-white">WORKS</span>
        </h3>
        <ul class="space-y-3">
          <li class="flex gap-3 text-gray-200">
            <span class="w-6 h-6 rounded-full bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white text-xs font-bold shadow-lg shadow-purple-500/30">1</span>
            <span>Each of the 15 party members gets 2 random numbers between 1-30</span>
          </li>
          <li class="flex gap-3 text-gray-200">
            <span class="w-6 h-6 rounded-full bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white text-xs font-bold shadow-lg shadow-purple-500/30">2</span>
            <span>Numbers correspond to entry positions in the Royal Rumble</span>
          </li>
          <li class="flex gap-3 text-gray-200">
            <span class="w-6 h-6 rounded-full bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white text-xs font-bold shadow-lg shadow-purple-500/30">3</span>
            <span>When a wrestler enters at your number, they're <strong class="text-cyan-400">"your"</strong> wrestler</span>
          </li>
          <li class="flex gap-3 text-gray-200">
            <span class="w-6 h-6 rounded-full bg-gradient-to-br from-yellow-500 to-orange-600 flex items-center justify-center text-white text-xs font-bold shadow-lg shadow-yellow-500/30">4</span>
            <span>If your wrestler wins the Rumble, <strong class="text-yellow-400">you win the championship!</strong></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initCurrentUser, $currentUser } from '../stores/matchStore';

  // Initialize current user
  initCurrentUser();

  // Display current user
  function updateUserDisplay() {
    const display = document.getElementById('current-user-display');
    if (!display) return;

    const user = $currentUser.get();
    if (user) {
      display.innerHTML = `
        <span class="text-white font-medium">Playing as: ${user.name}</span>
        <a href="/" class="text-purple-400 hover:underline text-sm ml-2">(change)</a>
      `;
    } else {
      display.innerHTML = `
        <span class="text-yellow-400">Please <a href="/" class="underline">select your name</a> first</span>
      `;
    }
  }

  $currentUser.subscribe(updateUserDisplay);
  updateUserDisplay();

  // Tab switching
  const tabMens = document.getElementById('tab-mens');
  const tabWomens = document.getElementById('tab-womens');
  const mensLottery = document.getElementById('mens-lottery');
  const womensLottery = document.getElementById('womens-lottery');

  if (tabMens && tabWomens && mensLottery && womensLottery) {
    tabMens.addEventListener('click', () => {
      tabMens.classList.add('bg-blue-600', 'text-white');
      tabMens.classList.remove('text-gray-400');
      tabWomens.classList.remove('bg-pink-600', 'text-white');
      tabWomens.classList.add('text-gray-400');
      mensLottery.classList.remove('hidden');
      womensLottery.classList.add('hidden');
    });

    tabWomens.addEventListener('click', () => {
      tabWomens.classList.add('bg-pink-600', 'text-white');
      tabWomens.classList.remove('text-gray-400');
      tabMens.classList.remove('bg-blue-600', 'text-white');
      tabMens.classList.add('text-gray-400');
      womensLottery.classList.remove('hidden');
      mensLottery.classList.add('hidden');
    });
  }
</script>
