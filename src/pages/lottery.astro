---
import Layout from '../layouts/Layout.astro';
import LotteryDraw from '../components/LotteryDraw';
---

<Layout title="Lottery Draw">
  <div class="space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-white mb-2">
        Lottery <span class="text-purple-400">Draw</span>
      </h1>
      <p class="text-gray-400 max-w-lg mx-auto">
        Each player draws 2 random numbers for the Royal Rumble. If your wrestler wins, you win!
      </p>
    </div>

    <!-- Current User -->
    <div id="current-user-display" class="text-center text-gray-400">
      Loading...
    </div>

    <!-- Tab Navigation -->
    <div class="flex justify-center">
      <div class="inline-flex bg-gray-800 rounded-lg p-1">
        <button
          id="tab-mens"
          class="px-6 py-2 rounded-md text-sm font-medium transition-colors bg-blue-600 text-white"
        >
          Men's Rumble
        </button>
        <button
          id="tab-womens"
          class="px-6 py-2 rounded-md text-sm font-medium transition-colors text-gray-400 hover:text-white"
        >
          Women's Rumble
        </button>
      </div>
    </div>

    <!-- Men's Lottery -->
    <div id="mens-lottery" class="block">
      <LotteryDraw client:load rumbleType="mens" />
    </div>

    <!-- Women's Lottery -->
    <div id="womens-lottery" class="hidden">
      <LotteryDraw client:load rumbleType="womens" />
    </div>

    <!-- Info Section -->
    <div class="max-w-2xl mx-auto mt-8">
      <div class="bg-gray-900 rounded-xl p-6 border border-gray-800">
        <h3 class="text-white font-semibold mb-3">How it works</h3>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li class="flex gap-2">
            <span class="text-purple-400">1.</span>
            Each of the 15 party members gets 2 random numbers between 1-30
          </li>
          <li class="flex gap-2">
            <span class="text-purple-400">2.</span>
            Numbers correspond to entry positions in the Royal Rumble
          </li>
          <li class="flex gap-2">
            <span class="text-purple-400">3.</span>
            When a wrestler enters at your number, they're "your" wrestler
          </li>
          <li class="flex gap-2">
            <span class="text-purple-400">4.</span>
            If your wrestler wins the Rumble, you win the championship!
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initCurrentUser, $currentUser } from '../stores/matchStore';

  // Initialize current user
  initCurrentUser();

  // Display current user
  function updateUserDisplay() {
    const display = document.getElementById('current-user-display');
    if (!display) return;

    const user = $currentUser.get();
    if (user) {
      display.innerHTML = `
        <span class="text-white font-medium">Playing as: ${user.name}</span>
        <a href="/" class="text-purple-400 hover:underline text-sm ml-2">(change)</a>
      `;
    } else {
      display.innerHTML = `
        <span class="text-yellow-400">Please <a href="/" class="underline">select your name</a> first</span>
      `;
    }
  }

  $currentUser.subscribe(updateUserDisplay);
  updateUserDisplay();

  // Tab switching
  const tabMens = document.getElementById('tab-mens');
  const tabWomens = document.getElementById('tab-womens');
  const mensLottery = document.getElementById('mens-lottery');
  const womensLottery = document.getElementById('womens-lottery');

  if (tabMens && tabWomens && mensLottery && womensLottery) {
    tabMens.addEventListener('click', () => {
      tabMens.classList.add('bg-blue-600', 'text-white');
      tabMens.classList.remove('text-gray-400');
      tabWomens.classList.remove('bg-pink-600', 'text-white');
      tabWomens.classList.add('text-gray-400');
      mensLottery.classList.remove('hidden');
      womensLottery.classList.add('hidden');
    });

    tabWomens.addEventListener('click', () => {
      tabWomens.classList.add('bg-pink-600', 'text-white');
      tabWomens.classList.remove('text-gray-400');
      tabMens.classList.remove('bg-blue-600', 'text-white');
      tabMens.classList.add('text-gray-400');
      womensLottery.classList.remove('hidden');
      mensLottery.classList.add('hidden');
    });
  }
</script>
