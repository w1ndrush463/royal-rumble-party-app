---
import Layout from '../layouts/Layout.astro';
import EntrantList from '../components/EntrantList';
import RingStatus from '../components/RingStatus';
import AdminPanel from '../components/AdminPanel';
---

<Layout title="Men's Royal Rumble">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-2xl sm:text-3xl font-bold text-white">
          Men's <span class="text-blue-400">Royal Rumble</span>
        </h1>
        <p class="text-gray-400 mt-1">30 Superstars compete for a WrestleMania title shot</p>
      </div>

      <!-- Admin Toggle -->
      <button
        id="admin-toggle"
        class="hidden px-4 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg text-gray-300 text-sm font-medium transition-colors"
      >
        Show Admin Panel
      </button>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-3 gap-6">
      <!-- Left Column: Entrant List -->
      <div class="lg:col-span-2">
        <div class="bg-gray-900 rounded-xl p-4 border border-gray-800">
          <h2 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            <span class="w-3 h-3 bg-blue-500 rounded-full" />
            Entrants
          </h2>
          <div id="entrant-list">
            <EntrantList client:load rumbleType="mens" />
          </div>
        </div>
      </div>

      <!-- Right Column: Ring Status + Admin -->
      <div class="space-y-6">
        <!-- Ring Status -->
        <div id="ring-status">
          <RingStatus client:load rumbleType="mens" />
        </div>

        <!-- Admin Panel (hidden by default) -->
        <div id="admin-panel" class="hidden">
          <AdminPanel client:load rumbleType="mens" />
        </div>

        <!-- User's Numbers -->
        <div class="bg-gray-900 rounded-xl p-4 border border-gray-800">
          <h3 class="text-white font-semibold mb-3">Your Numbers</h3>
          <div id="user-numbers" class="text-gray-400 text-sm">
            Select your name on the home page to see your numbers.
          </div>
        </div>

        <!-- Lucky Numbers Info -->
        <div class="bg-gray-900 rounded-xl p-4 border border-gray-800">
          <h3 class="text-white font-semibold mb-3">Lucky Numbers</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between text-gray-400">
              <span>#30</span>
              <span class="text-purple-400">5 wins (most)</span>
            </div>
            <div class="flex justify-between text-gray-400">
              <span>#27</span>
              <span class="text-purple-400">5 wins</span>
            </div>
            <div class="flex justify-between text-gray-400">
              <span>#28</span>
              <span class="text-purple-400">4 wins</span>
            </div>
            <div class="flex justify-between text-gray-400">
              <span>#1</span>
              <span class="text-purple-400">4 wins</span>
            </div>
          </div>
          <a href="/reference" class="block mt-3 text-xs text-blue-400 hover:text-blue-300">
            View all stats &rarr;
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initCurrentUser, $currentUser, getUserLotteryNumbers } from '../stores/matchStore';

  // Initialize current user from localStorage
  initCurrentUser();

  // Check for admin mode (simple URL param for now)
  const urlParams = new URLSearchParams(window.location.search);
  const isAdmin = urlParams.get('admin') === 'true';

  if (isAdmin) {
    const adminToggle = document.getElementById('admin-toggle');
    const adminPanel = document.getElementById('admin-panel');

    if (adminToggle && adminPanel) {
      adminToggle.classList.remove('hidden');

      adminToggle.addEventListener('click', () => {
        const isHidden = adminPanel.classList.contains('hidden');
        adminPanel.classList.toggle('hidden');
        adminToggle.textContent = isHidden ? 'Hide Admin Panel' : 'Show Admin Panel';
      });
    }
  }

  // Update user numbers display
  function updateUserNumbers() {
    const userNumbers = document.getElementById('user-numbers');
    if (!userNumbers) return;

    const currentUser = $currentUser.get();
    if (!currentUser) {
      userNumbers.innerHTML = `
        <p>Select your name on the <a href="/" class="text-blue-400 hover:underline">home page</a> to see your numbers.</p>
      `;
      return;
    }

    const numbers = getUserLotteryNumbers(currentUser.id, 'mens');
    if (numbers.length === 0) {
      userNumbers.innerHTML = `
        <p class="text-gray-400">No numbers assigned yet.</p>
        <a href="/lottery" class="text-blue-400 hover:underline text-xs">Go to lottery draw</a>
      `;
    } else {
      userNumbers.innerHTML = `
        <div class="flex gap-2">
          ${numbers.map(num => `
            <span class="w-10 h-10 rounded-full bg-blue-600 flex items-center justify-center text-white font-bold">
              ${num}
            </span>
          `).join('')}
        </div>
      `;
    }
  }

  // Subscribe to user changes
  $currentUser.subscribe(updateUserNumbers);
  updateUserNumbers();
</script>
