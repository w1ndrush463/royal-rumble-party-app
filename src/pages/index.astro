---
import Layout from '../layouts/Layout.astro';
import matchState from '../data/match-state.json';
---

<Layout title="Home">
  <div class="space-y-8">
    <!-- Hero Section -->
    <section class="text-center py-8">
      <h1 class="text-4xl sm:text-6xl font-black mb-4">
        <span class="rumble-title">ROYAL RUMBLE</span>
        <span class="neon-cyan block sm:inline"> 2026</span>
      </h1>
      <p class="text-purple-300 text-lg max-w-2xl mx-auto">
        Welcome to the official watch party companion app. Track your lottery numbers,
        make predictions, and compete with friends!
      </p>
    </section>

    <!-- User Selection -->
    <section class="max-w-md mx-auto">
      <div class="vaporwave-card p-6">
        <h2 class="text-xl font-bold text-center mb-4">
          <span class="gold-chrome-text">WHO</span>
          <span class="text-white">ARE YOU?</span>
        </h2>
        <div id="user-selection" class="grid grid-cols-3 gap-3">
          {matchState.users.map(user => (
            <button
              class="user-btn p-3 rounded-lg bg-gray-800/50 hover:bg-purple-900/50 text-white text-sm font-medium transition-all border-2 border-purple-800/50 hover:border-cyan-400 hover:shadow-lg hover:shadow-cyan-500/20"
              data-user-id={user.id}
              data-user-name={user.name}
            >
              {user.name}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Quick Access Cards -->
    <section class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <a href="/mens-rumble" class="quick-card group">
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600/30 to-cyan-600/30 text-cyan-400 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform group-hover:shadow-lg group-hover:shadow-cyan-500/30">
          <span class="text-2xl">üëî</span>
        </div>
        <h3 class="text-white font-bold mb-1 group-hover:text-cyan-400 transition-colors">Men's Rumble</h3>
        <p class="text-purple-300 text-sm">30 superstars, 1 winner</p>
      </a>

      <a href="/womens-rumble" class="quick-card group">
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-pink-600/30 to-rose-600/30 text-pink-400 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform group-hover:shadow-lg group-hover:shadow-pink-500/30">
          <span class="text-2xl">üëó</span>
        </div>
        <h3 class="text-white font-bold mb-1 group-hover:text-pink-400 transition-colors">Women's Rumble</h3>
        <p class="text-purple-300 text-sm">30 superstars, 1 winner</p>
      </a>

      <a href="/predictions" class="quick-card group">
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-yellow-600/30 to-orange-600/30 text-yellow-400 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform group-hover:shadow-lg group-hover:shadow-yellow-500/30">
          <span class="text-2xl">üé∞</span>
        </div>
        <h3 class="text-white font-bold mb-1 group-hover:text-yellow-400 transition-colors">Predictions</h3>
        <p class="text-purple-300 text-sm">Make your bets</p>
      </a>

      <a href="/leaderboard" class="quick-card group">
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600/30 to-indigo-600/30 text-purple-400 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform group-hover:shadow-lg group-hover:shadow-purple-500/30">
          <span class="text-2xl">üèÜ</span>
        </div>
        <h3 class="text-white font-bold mb-1 group-hover:text-purple-400 transition-colors">Leaderboard</h3>
        <p class="text-purple-300 text-sm">Check the standings</p>
      </a>
    </section>

    <!-- Lottery Status -->
    <section class="vaporwave-card p-6">
      <h2 class="text-xl font-bold mb-4">
        <span class="gold-chrome-text">YOUR</span>
        <span class="text-white">LOTTERY NUMBERS</span>
      </h2>
      <div id="lottery-status" class="text-purple-300">
        Select your name above to see your lottery numbers.
      </div>
    </section>

    <!-- Quick Stats -->
    <section class="grid sm:grid-cols-3 gap-4">
      <div class="vaporwave-card p-4 text-center">
        <div class="text-4xl font-black neon-cyan">30</div>
        <div class="text-purple-300 text-sm">Entrants per match</div>
      </div>
      <div class="vaporwave-card p-4 text-center">
        <div class="text-4xl font-black neon-pink" style="text-shadow: 0 0 10px #ff00ff, 0 0 20px #ff00ff;">15</div>
        <div class="text-purple-300 text-sm">Party members</div>
      </div>
      <div class="vaporwave-card p-4 text-center">
        <div class="text-4xl font-black gold-chrome-text">2</div>
        <div class="text-purple-300 text-sm">Numbers per person</div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .quick-card {
    display: block;
    background: linear-gradient(135deg, rgba(26, 10, 46, 0.9) 0%, rgba(10, 10, 26, 0.95) 100%);
    border-radius: 0.75rem;
    padding: 1.25rem;
    border: 1px solid rgba(191, 0, 255, 0.3);
    transition: all 0.2s ease;
    box-shadow: 0 0 20px rgba(191, 0, 255, 0.1);
  }

  .quick-card:hover {
    border-color: rgba(0, 255, 255, 0.5);
    transform: translateY(-4px);
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
  }
</style>

<script>
  // Handle user selection
  document.querySelectorAll('.user-btn').forEach(btn => {
    const button = btn as HTMLButtonElement;
    const userId = button.dataset.userId;
    const userName = button.dataset.userName;

    // Check if this user is already selected
    const savedUserId = localStorage.getItem('selectedUserId');
    if (savedUserId === userId) {
      button.classList.add('border-purple-500', 'bg-purple-900/30');
      updateLotteryStatus(userId!);
    }

    button.addEventListener('click', () => {
      localStorage.setItem('selectedUserId', userId!);
      localStorage.setItem('selectedUserName', userName!);

      // Update selection visual
      document.querySelectorAll('.user-btn').forEach(b => {
        b.classList.remove('border-purple-500', 'bg-purple-900/30');
      });
      button.classList.add('border-purple-500', 'bg-purple-900/30');

      updateLotteryStatus(userId!);
    });
  });

  function updateLotteryStatus(userId: string) {
    const lotteryStatus = document.getElementById('lottery-status');
    if (!lotteryStatus) return;

    // For now, show a message since no lottery has been drawn
    lotteryStatus.innerHTML = `
      <p class="text-gray-400 mb-4">Lottery numbers will be drawn before the event!</p>
      <a href="/lottery" class="inline-block px-4 py-2 bg-purple-600 hover:bg-purple-500 rounded-lg text-white font-medium transition-colors">
        Go to Lottery Draw
      </a>
    `;
  }
</script>
