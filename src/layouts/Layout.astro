---
import '../styles/global.css';
import SyncIndicator from '../components/SyncIndicator';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Royal Rumble Watch Party Companion App' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Royal Rumble Party</title>

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#7c3aed" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  </head>
  <body class="min-h-screen">
    <!-- Navigation -->
    <nav class="sticky top-0 z-50 animated-gradient-bg backdrop-blur border-b border-purple-900/50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-3 group">
            <div class="relative">
              <span class="text-3xl font-black rumble-title neon-flicker">RR</span>
            </div>
            <div class="hidden sm:block">
              <span class="text-lg font-bold gold-chrome-text">ROYAL RUMBLE</span>
              <span class="block text-xs text-cyan-400 tracking-widest uppercase">Watch Party 2026</span>
            </div>
          </a>

          <!-- Navigation Links -->
          <div class="flex items-center gap-1 sm:gap-2">
            <a href="/mens-rumble" class="nav-link-retro">
              <span class="nav-icon">üëî</span>
              <span class="nav-text">Men's</span>
            </a>
            <a href="/womens-rumble" class="nav-link-retro">
              <span class="nav-icon">üëó</span>
              <span class="nav-text">Women's</span>
            </a>
            <a href="/predictions" class="nav-link-retro">
              <span class="nav-icon">üé∞</span>
              <span class="nav-text">Bets</span>
            </a>
            <a href="/leaderboard" class="nav-link-retro">
              <span class="nav-icon">üèÜ</span>
              <span class="nav-text">Stats</span>
            </a>
            <a href="/reference" class="nav-link-retro">
              <span class="nav-icon">üì∫</span>
              <span class="nav-text">Info</span>
            </a>
            <div class="ml-2 border-l border-purple-700/50 pl-2">
              <SyncIndicator client:load />
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-6">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-purple-900/30 mt-auto py-6 text-center">
      <p class="text-sm">
        <span class="gold-chrome-text font-bold">ROYAL RUMBLE</span>
        <span class="text-purple-400"> Watch Party </span>
        <span class="neon-cyan font-bold">2026</span>
      </p>
      <p class="text-xs text-gray-600 mt-2">30 Superstars. 1 Winner. Endless Drama.</p>
    </footer>
  </body>
</html>

<style>
  .nav-link-retro {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #c4b5fd;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .nav-link-retro .nav-icon {
    font-size: 1.25rem;
    line-height: 1;
  }

  .nav-link-retro .nav-text {
    display: none;
  }

  .nav-link-retro:hover {
    color: #00ffff;
    text-shadow: 0 0 10px #00ffff;
    transform: translateY(-2px);
  }

  .nav-link-retro.active {
    color: #ff00ff;
    text-shadow: 0 0 10px #ff00ff;
  }

  @media (min-width: 640px) {
    .nav-link-retro {
      flex-direction: row;
      gap: 0.375rem;
      padding: 0.5rem 0.75rem;
    }

    .nav-link-retro .nav-icon {
      font-size: 1rem;
    }

    .nav-link-retro .nav-text {
      display: inline;
    }
  }
</style>

<script>
  import { initSync } from '../stores/syncStore';

  // Initialize sync on page load
  initSync();

  // Highlight active nav link
  document.addEventListener('DOMContentLoaded', () => {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('.nav-link-retro');

    navLinks.forEach(link => {
      const href = link.getAttribute('href');
      if (href && currentPath.startsWith(href) && href !== '/') {
        link.classList.add('active');
      } else if (href === '/' && currentPath === '/') {
        link.classList.add('active');
      }
    });
  });
</script>
